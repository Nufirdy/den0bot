  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\den0bot.Analytics.Data\den0bot.Analytics.Data.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Locales\*.json" CopyToOutputDirectory="Always" />
  </ItemGroup>
